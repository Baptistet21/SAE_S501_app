<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17282D"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/england"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="360dp"
        android:src="@drawable/greatbritain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/inspire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="140dp"
        android:src="@drawable/inspire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/se_connecte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="112dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="9sp"
        android:text="@string/se_connecte"
        android:textAppearance="@style/se_connecte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/connectez_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="3sp"
        android:text="@string/connectez_v"
        android:textAppearance="@style/connectez_v"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/se_connecte" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="44dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectez_v">

        <TextView
            android:id="@+id/adresse_mai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="5dp"
            android:gravity="top"
            android:text="@string/adresse_mai"
            android:textAppearance="@style/adresse_mai" />

        <EditText
            android:id="@+id/editTextEmail"
            style="@style/CustomEditTextStyle"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:hint="Adresse e-mail"
            android:paddingLeft="10dp"
            android:inputType="textEmailAddress"
            android:textColor="#00BA8D"/>


        <!-- TextView pour "Mot de passe" -->

        <TextView
            android:id="@+id/mot_de_pass"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginLeft="180dp"
            android:lineSpacingExtra="3sp"
            android:text="@string/mot_de_pass"
            android:textAppearance="@style/mot_de_pass" />

        <TextView
            android:id="@+id/mdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginBottom="5dp"
            android:text="@string/mdp"
            android:textAppearance="@style/adresse_mai"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/editTextPassword"
            style="@style/CustomEditTextStyle"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:hint="Mot de passe"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:textColor="#00BA8D"/>


        <Button
            android:id="@+id/btnConnexion"
            style="@style/CustomButtonStyle"
            android:layout_width="153dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_button_background"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onLoginClick"
            android:text="Se connecter"
            android:textAlignment="center"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/nouveau"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginStart="188dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:gravity="top"
        android:lineSpacingExtra="3sp"
        android:onClick="onNouveauInscriptionClick"
        android:text="@string/nouveau"
        android:textAppearance="@style/nouveau"
        android:translationY="-1.74sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="310dp"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="36dp"
        android:background="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/se_connecte" />

    <View
        android:id="@+id/rectangle_"
        android:layout_width="310dp"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="456dp"
        android:background="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/se_connecte" />


</androidx.constraintlayout.widget.ConstraintLayout>
