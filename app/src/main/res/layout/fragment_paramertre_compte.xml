<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17282D"
    tools:context=".MonCompte.ParamertreCompteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!-- Bouton "Fermer Paramètre" -->
        <Button
            android:id="@+id/closeParametre"
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:layout_marginTop="10dp"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="25sp"
            android:layout_marginBottom="10sp"
            android:background="#FFF" />

        <!-- Bouton "Déconnexion" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="horizontal"
            android:background="#FFF">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/deco"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/deconnexion"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button"
                android:text="@string/deconnexion"
                android:textColor="#00BA8D"
                android:textSize="20dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="25sp"
            android:layout_marginBottom="10sp"
            android:background="#FFF" />

        <!-- Bouton "Langues" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="horizontal"
            android:background="#FFF">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/greatbritain"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/langues"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button"
                android:text="@string/anglais"
                android:textColor="#00BA8D"
                android:textSize="20dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="25sp"
            android:layout_marginBottom="10sp"
            android:background="#FFF" />

        <!-- Bouton "Modifier Profil" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="horizontal"
            android:background="#FFF">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/modifier_profile"
                android:scaleType="fitCenter" />

            <Button
                android:id="@+id/updateprofile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button"
                android:text="@string/modifier_profil"
                android:textColor="#00BA8D"
                android:textSize="20dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="25sp"
            android:layout_marginBottom="10sp"
            android:background="#FFF" />

        <!-- Bouton "Aides" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="horizontal"
            android:background="#FFF">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/aide"
                android:scaleType="fitCenter" />

            <Button
                android:id="@+id/aide"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button"
                android:text="@string/aides"
                android:textColor="#00BA8D"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
