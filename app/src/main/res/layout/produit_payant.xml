<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#344C57"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background" />
    <TextView
        android:id="@+id/se_connecte2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="9sp"
        android:text="Ma première réalisation"
        android:textAppearance="@style/se_connecte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/se_connecte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="9sp"
        android:text="Ma première réalisation"
        android:textAppearance="@style/se_connecte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:background="@color/white"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="124dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="53dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="135dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="96dp"
        android:layout_height="45dp"
        android:hint="@string/nom"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="143dp" />

    <EditText
        android:id="@+id/prix_payant"
        style="@style/CustomEditTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:hint="@string/prix_payant"
        android:paddingRight="5sp"
        android:textColorHint="#00BA8D"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="258dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/descriptionproduitgratuit"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="292dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/eye_1"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="350dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/charger_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/visualiser_img"
        android:textColor="#0000FF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="361dp" />

    <TextView
        android:id="@+id/ajouter_panier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/ajouter_panier"
        android:textColor="#0000FF"
        tools:ignore="DuplicateIds,MissingConstraints"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="414dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/euro_1"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="403dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notation : "
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="458dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commentaires : "
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="542dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/customer_6"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="576dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/commentaire_personne"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:hint="@string/commentaire_personne"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="576dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="19dp"
        android:layout_height="20dp"
        android:background="@drawable/sent_1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="359dp"
        tools:layout_editor_absoluteY="667dp" />

    <EditText
        style="@style/CustomEditTextStyle"
        android:layout_width="331dp"
        android:layout_height="34dp"
        android:background="@color/white"
        android:gravity="left"
        android:hint="@string/ajouter_commentaire"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="660dp"
        tools:ignore="MissingConstraints" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="196dp" />

    <RatingBar
        android:id="@+id/ratingBar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="485dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
