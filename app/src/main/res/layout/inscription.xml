<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17282D"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextPassword2"
        style="@style/CustomEditTextStyle"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:hint="Mot de passe"
        android:textColor="#00BA8D"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="575dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/mdp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="544dp"
        android:gravity="top"
        android:text="Confirmer mot de passe"
        android:textAppearance="@style/adresse_mai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEmail2"
        style="@style/CustomEditTextStyle"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:hint="Pseudo"
        android:paddingLeft="10dp"
        android:textColor="#00BA8D"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="327dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/pseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="top"
        android:text="Pseudo"
        android:textAppearance="@style/adresse_mai"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="299dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/england"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="360dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/inspire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="140dp"
        android:src="@drawable/inspire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Inscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="132dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="9sp"
        android:text="Inscription"
        android:textAppearance="@style/se_connecte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/connectez_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="3sp"
        android:text="Inscrivez-vous !"
        android:textAppearance="@style/connectez_v"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Inscription" />

    <TextView
        android:id="@+id/nouveau"
        android:layout_width="245dp"
        android:layout_height="18dp"
        android:layout_marginBottom="8dp"
        android:gravity="top"
        android:lineSpacingExtra="3sp"
        android:text="Vous avez déjà un compte ? : Se connecter"
        android:textAppearance="@style/nouveau"
        android:translationY="-1.74sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="310dp"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="44dp"
        android:background="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Inscription" />

    <View
        android:id="@+id/rectangle_"
        android:layout_width="310dp"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="496dp"
        android:background="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Inscription" />

    <TextView
        android:id="@+id/adresse_mai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="top"
        android:text="@string/adresse_mai"
        android:textAppearance="@style/adresse_mai"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="377dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextEmail"
        style="@style/CustomEditTextStyle"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:hint="Adresse e-mail"
        android:paddingLeft="10dp"
        android:textColor="#00BA8D"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="406dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="460dp"
        android:gravity="top"
        android:text="@string/mdp"
        android:textAppearance="@style/adresse_mai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPassword"
        style="@style/CustomEditTextStyle"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:hint="Mot de passe"
        android:paddingLeft="10dp"
        android:textColor="#00BA8D"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="489dp"
        tools:ignore="MissingConstraints" />

    <Button
        style="@style/CustomButtonStyle"
        android:layout_width="153dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button_background"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onLoginClick"
        android:text="S'inscrire"
        android:textAlignment="center"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="625dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
