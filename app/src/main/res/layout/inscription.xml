<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17282D"
    tools:context=".Inscription">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="650sp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/inspire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/inspire" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_titre_connecter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150sp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Inscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="9sp"
            android:text="Inscription"
            android:textAppearance="@style/se_connecte" />

        <TextView
            android:id="@+id/connectez_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="3sp"
            android:text="Inscrivez-vous !"
            android:textAppearance="@style/connectez_v" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="35sp"
            android:layout_marginRight="35sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pseudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:layout_gravity="center"
                android:lineSpacingExtra="9sp"
                android:text="@string/pseudo"
                android:textAppearance="@style/adresse_mai" />


            <EditText
                android:id="@+id/editpseudo"
                style="@style/CustomEditTextStyle"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginBottom="20sp"
                android:layout_gravity="center"
                android:hint="Pseudo"
                android:textColor="#00BA8D" />

            <TextView
                android:id="@+id/adresse_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:layout_gravity="center"
                android:lineSpacingExtra="9sp"
                android:text="@string/adresse_mail"
                android:textAppearance="@style/adresse_mai"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/editTextEmail"
                style="@style/CustomEditTextStyle"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginBottom="20sp"
                android:layout_gravity="center"
                android:hint="Adresse e-mail"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/mdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:layout_gravity="center"
                android:text="@string/mdp"
                android:textAppearance="@style/adresse_mai" />

            <EditText
                android:id="@+id/editTextPasswordConfirm"
                style="@style/CustomEditTextStyle"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginBottom="20sp"
                android:hint="Mot de passe"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:textColor="#00BA8D" />

            <TextView
                android:id="@+id/mdp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:layout_gravity="center"
                android:text="Confirmer mot de passe"
                android:textAppearance="@style/adresse_mai" />

            <EditText
                android:id="@+id/editTextPassword"
                style="@style/CustomEditTextStyle"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginBottom="20sp"
                android:layout_gravity="center"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:textColor="#00BA8D" />

            <Button
                android:id="@+id/btn_inscription"
                android:layout_width="153sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:layout_margin="40sp"

                android:background="@drawable/custom_button_background"
                android:text="@string/btn_inscription"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:id="@+id/rectangle_3"
                android:layout_width="310dp"
                android:layout_height="2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:background="#D9D9D9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.475"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Inscription" />

            <TextView
                android:id="@+id/nouveau"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_margin="5sp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:onClick="onInscriptionClick"
                android:text="Vous avez déjà un compte ? : Se connecter"
                android:textAppearance="@style/nouveau"
                android:translationY="-1.74sp"
                app:layout_constraintBottom_toBottomOf="@+id/rectangle_"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.903"
                app:layout_constraintStart_toStartOf="parent" />





        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
